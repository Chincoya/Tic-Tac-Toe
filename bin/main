#!/usr/bin/env ruby
class TicTacInterface
  def initialize()
    begin
      puts `clear`
      p "What's your name, player 1?"
      @player1 = gets.chomp
      puts `clear`
      p "What's your name, player 2?"
      @player2 = gets.chomp
      puts `clear`
    rescue StandardError => e
      p "No name given"
      retry
    else
    end
    @play = false
    @board = [1, 2, 3, 4, 5, 6, 7, 8, 9]
    @playert = true
    @play = true
  end

  def game
    moves = 0
    paint
    while @play
      p "#{ @playert ? @player1 : @player2 }, make a move"
      begin
        move((gets.chomp.to_i) - 1)
      rescue StandardError => e
        p "Error!!"
        retry
      end
      @playert = !@playert
      moves += 1
      @play = moves < 9
      game_end unless @play
    end
  end

  private

  def move(num)
    @board[num] = @playert ? "X" : "O"
    paint()
  end

  def paint()
    puts `clear`
    p "||||||||||||||||||||||"
    3.times do |x|
      p "        #{@board[(3*x)]} #{@board[(3*x)+1]} #{@board[(3*x)+2]}"
    end
    p "||||||||||||||||||||||"
  end

  def game_end
    puts `clear`
    paint
    p "Thanks for playing!!"
  end

end

main = TicTacInterface.new
main.game
